.content
  .inner
    - if form_for != "edit"
      %div.group.form
        %label.label Name
        = text_field :id => "client_name", :name => "name", :class => "text_field", :value => params.has_key?(:name) ? h(params[:name]) : @client.name
        %span.description The name of the Client
    
    %div.group.form
      %label.label Admin
      = text_field :id => "client_admin", :name => "admin", :class => "text_field", :value => @client.admin
      %span.description Whether or not the Client is an admin
      
    - if form_for != "edit"  
      %div.group.form
        %label.label Client Validation Key Location
        = text_field :id => "client_private_key", :name => "private_key_location", :class => "text_field"
        %span.description The location on the local hard drive to store the Client validation key 
      
    = form(:action => form_url, :method => :post, :id => form_id, :class => 'form') do
      %div.group
        .actions-bar
          .actions= submit submit_name, :id => submit_id, :class => 'button'
