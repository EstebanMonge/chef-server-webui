.block#block-tables
  .content
    %h2.title= "Client: #{h @client.name}"
    .inner
      = render("navigation", :active => "show")
      .content
        .inner
          .left
            %h3 Admin
            = @client.admin
          .left
            %h3 Public Key
            %p
              = text_area_tag 'public_key', @client.public_key, :rows => 10, :cols => 65
              = clippy(h(@client.public_key))
          -unless @private_key.nil?
            .left
              %h3 Private Key (Will not show again, Please copy!)
              %h4.bold Please copy and save as the client's validation key (e.g. client.pem)
              %p
                = text_area_tag 'private_key', @private_key, :rows => 27, :cols => 65
                = clippy @private_key


